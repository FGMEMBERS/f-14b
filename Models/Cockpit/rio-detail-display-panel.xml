<PropertyList>

	<!-- DÃ©tailled Cockpit Consoles and Panels -->
	<name>RIO-TID</name>
	<path>rio-detail-display-panel.ac</path>

	<!-- don't show it when external view or Pilot View-->
	<animation>
		<type>select</type>
		<object-name>rio-detail-display-panel</object-name>
		<condition>
			<equals>
				<property>sim/current-view/name</property>
				<value>RIO View</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>rng-disp-200</object-name>
		<condition>
			<equals>
				<property>instrumentation/radar/radar2-range</property>
				<value>200</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>rng-disp-100</object-name>
		<condition>
			<equals>
				<property>instrumentation/radar/radar2-range</property>
				<value>100</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>rng-disp-50</object-name>
		<condition>
			<equals>
				<property>instrumentation/radar/radar2-range</property>
				<value>50</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>rng-disp-20</object-name>
		<condition>
			<equals>
				<property>instrumentation/radar/radar2-range</property>
				<value>20</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>rng-disp-10</object-name>
		<condition>
			<equals>
				<property>instrumentation/radar/radar2-range</property>
				<value>10</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>rng-disp-5</object-name>
		<condition>
			<equals>
				<property>instrumentation/radar/radar2-range</property>
				<value>5</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>rng-disp-fixed10</object-name>
		<condition>
			<or>
				<equals>
					<property>sim/model/f-14b/instrumentation/radar-awg-9/mode</property>
					<value>PDSTT</value>
				</equals>
				<equals>
					<property>sim/model/f-14b/instrumentation/radar-awg-9/mode</property>
					<value>PSTT</value>
				</equals>
			</or>
		</condition>
	</animation>

	<!-- warning lights -->
	<animation> 
		<object-name>ant-trk-light-on</object-name>
		<type>select</type>
		<condition>
			<property>sim/model/f-14b/instrumentation/radar-awg-9/ant-trk-light</property>
		</condition>
	</animation>
	<animation> 
		<object-name>rd-rot-light-on</object-name>
		<type>select</type>
		<condition>
			<property>sim/model/f-14b/instrumentation/radar-awg-9/rd-rot-light</property>
		</condition>
	</animation>
	<animation> 
		<object-name>jat-light-on</object-name>
		<type>select</type>
		<condition>
			<property>sim/model/f-14b/instrumentation/radar-awg-9/jat-light</property>
		</condition>
	</animation>
	<animation> 
		<object-name>irot-light-on</object-name>
		<type>select</type>
		<condition>
			<property>sim/model/f-14b/instrumentation/radar-awg-9/irot-light</property>
		</condition>
	</animation>

						<!--<display-rdr type="bool">true</display-rdr>
						<display-ir type="bool">false</display-ir>
						<display-iff type="bool">false</display-iff>
						<mode type="string">PDS</mode>--> <!-- PDS, RWS, TWS, PDSTT, PSTT, VSL -->

	<!-- CCM Modes push buttons -->
	<animation> 
		<object-name>spl-light-on</object-name>
		<type>select</type>
		<condition>
			<property>sim/model/f-14b/instrumentation/radar-awg-9/ccm-mode-spl</property>
		</condition>
	</animation>
	<animation> 
		<object-name>alt-dhf-light-on</object-name>
		<type>select</type>
		<condition>
			<property>sim/model/f-14b/instrumentation/radar-awg-9/ccm-mode-alt-dhf</property>
		</condition>
	</animation>
	<animation> 
		<object-name>trs-light-on</object-name>
		<type>select</type>
		<condition>
			<property>sim/model/f-14b/instrumentation/radar-awg-9/ccm-mode-trs</property>
		</condition>
	</animation>


						<!--<mode type="string">PDS</mode>--> <!-- PDS, PS, RWS, TWSA, TWSM, PDSTT, PSTT, VSL -->
	<!-- Display push buttons -->
	<animation> 
		<object-name>rdr-light-on</object-name>
		<type>select</type>
		<condition>
			<property>sim/model/f-14b/instrumentation/radar-awg-9/display-rdr</property>
		</condition>
	</animation>
	<animation>
		<name>display-rdr</name>
		<type>pick</type>
		<visible>true</visible>
		<object-name>display-rdr</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>sim/model/f-14b/instrumentation/radar-awg-9/display-rdr</property>
			</binding>
		</action>
	</animation>
	<animation> 
		<object-name>ir-light-on</object-name>
		<type>select</type>
		<condition>
			<property>sim/model/f-14b/instrumentation/radar-awg-9/display-ir</property>
		</condition>
	</animation>
	<animation> 
		<object-name>iff-light-on</object-name>
		<type>select</type>
		<condition>
			<property>sim/model/f-14b/instrumentation/radar-awg-9/display-iff</property>
		</condition>
	</animation>

	<!-- WCS Mode push buttons -->
	<animation>
		<type>select</type>
		<object-name>pd-stt-light-on</object-name>
		<condition>
			<equals>
				<property>sim/model/f-14b/instrumentation/radar-awg-9/mode</property>
				<value>PDSTT</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>pulse-stt-light-on</object-name>
		<condition>
			<equals>
				<property>sim/model/f-14b/instrumentation/radar-awg-9/mode</property>
				<value>PSTT</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>pd-srch-light-on</object-name>
		<condition>
			<equals>
				<property>sim/model/f-14b/instrumentation/radar-awg-9/mode</property>
				<value>PDS</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>rws-light-on</object-name>
		<condition>
			<equals>
				<property>sim/model/f-14b/instrumentation/radar-awg-9/mode</property>
				<value>RWS</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>tws-auto-light-on</object-name>
		<condition>
			<equals>
				<property>sim/model/f-14b/instrumentation/radar-awg-9/mode</property>
				<value>TWSA</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>tws-man-light-on</object-name>
		<condition>
			<equals>
				<property>sim/model/f-14b/instrumentation/radar-awg-9/mode</property>
				<value>TWSM</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>pulse-srch-light-on</object-name>
		<condition>
			<equals>
				<property>sim/model/f-14b/instrumentation/radar-awg-9/mode</property>
				<value>PS</value>
			</equals>
		</condition>
	</animation>

	<!-- lighting -->
	<animation>
		<object-name>mount</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.44</red>
			<green>0.192</green>
			<blue>0.08</blue>
		</emission>
	</animation>


	<animation>
		<object-name>modes-buttons-on</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/lighting/index-norm</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	<animation>
		<object-name>switches</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.18</red>
			<green>0.08</green>
			<blue>0.033</blue>
		</emission>
	</animation>
	<animation>
		<object-name>knobs</object-name>
		<object-name>rng-buttons</object-name>
		<object-name>elev</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>
	<animation>
		<object-name>modes-buttons-off</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.825</red>
			<green>0.36</green>
			<blue>0.15</blue>
		</emission>
	</animation>
	<animation>
		<object-name>rng-disp</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>


	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>70</max-m>
	</animation>

</PropertyList>
