<PropertyList>

	<!-- DÃ©tailled Cockpit Consoles and Panels -->
	<name>Detail-Inside-Front</name>
	<path>detail-inside-front.ac</path>

	<animation>
		<type>select</type>
		<object-name>inside-front</object-name>
		<condition>
			<equals>
				<property>sim/current-view/name</property>
				<value>Cockpit View</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>L-pedal</object-name>
		<property>controls/flight/rudder</property>
		<factor>0.07</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>R-pedal</object-name>
		<property>controls/flight/rudder</property>
		<factor>0.07</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

