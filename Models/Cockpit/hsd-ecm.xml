<?xml version="1.0"?>

<!--Simple Tactical Display (ECM) -->

<PropertyList>

	<path>hsd-ecm.ac</path>

	<animation>
		<type>select</type>
		<object-name>tid</object-name>
		<condition>
			<equals>
				<property>sim/model/f-14b/controls/pilots-displays/hsd-mode-nav</property>
				<value>-1</value>
			</equals>
			<property>sim/model/f-14b/controls/HSD/on-off</property>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>tid</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>MP1-scan</object-name>
		<condition>
			<greater-than>
				<property>ai/models/multiplayer[0]/radar/ecm-signal</property>
				<value>0</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>MP1-scan</object-name>
