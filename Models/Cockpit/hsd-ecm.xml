		<property>sim/model/f-14b/instrumentation/orientation/local-mag-dev</property>
		<axis><x>-1</x></axis>
	</animation>
	<animation>
		<type>scale</type>
		<object-name>MP1-scan</object-name>
		<property>ai/models/multiplayer[0]/radar/ecm-signal</property>
		<x-factor>0</x-factor>
		<y-factor>0</y-factor>
		<z-factor>1</z-factor>
		<x-offset>1</x-offset>
