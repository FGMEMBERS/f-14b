<?xml version="1.0"?>

<!--Simple Tactical Display (Basic FG Radar) -->

<PropertyList>

	<path>hud.ac</path>

	<animation>
		<type>select</type>
		<object-name>hud</object-name>
		<condition>
			<equals>
				<property>sim/current-view/name</property>
				<value>Cockpit View</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>lock-1</object-name>
		<condition>
			<property>sim/model/f-14b/instrumentation/radar-awg-9/hud/target-display</property>
		</condition>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>lock-1</object-name>
		<property>sim/model/f-14b/instrumentation/radar-awg-9/hud/target-horizontal-deviation</property>
		<factor>1</factor>
		<axis>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>lock-1</object-name>
		<property>sim/model/f-14b/instrumentation/radar-awg-9/hud/target-vertical-deviation</property>
		<factor>1</factor>
		<axis>
			<z>1</z>
		</axis>
	</animation>




	<!-- lighting -->
	<animation>
		<object-name>hud</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/hud/intens</factor-prop>
			<red>0.5</red>
			<green>0.8</green>
			<blue>0.32</blue>
		</emission>
		<transparency>
			<alpha-prop>sim[0]/hud/color/alpha</alpha-prop>
		</transparency>
	</animation>



</PropertyList>
