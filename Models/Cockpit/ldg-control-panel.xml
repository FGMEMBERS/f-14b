<?xml version="1.0"?>
<PropertyList>
	<path>ldg-control-panel.ac</path>

    <animation>
		<type>select</type>
		<object-name>emerg-stores-jett-button-on</object-name>
		<condition>
			<property>sim/model/f-14b/controls/armament/emerg-jettison-switch</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>emerg-stores-jett-button-off</object-name>
		<condition>
			<not><property>sim/model/f-14b/controls/armament/emerg-jettison-switch</property></not>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>brake-handle</object-name>
		<property>controls/gear/brake-parking</property>
		<factor>0.0834</factor>
		<axis>
			<x>0.0834</x>
			<y>-0.0084</y>
			<z>0.0000</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>ld-gear-handle</object-name>
		<property>sim/model/f-14b/controls/gear/ld-gear-handle-anim</property>
		<interpolation>
			<entry><ind>-1</ind><dep>-18</dep></entry>
			<entry><ind>-0.5</ind><dep>6</dep></entry>
			<entry><ind>0</ind><dep>30</dep></entry> 
		</interpolation>  
		<center>
			<x-m>-0.0322</x-m>
			<y-m>0</y-m>
			<z-m>-0.0350</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>hyd-isol-switch</object-name>
		<property>sim/model/f-14b/controls/gear/ld-gear-handle-anim</property>
		<interpolation>
			<entry><ind>-1</ind><dep>-33</dep></entry>
			<entry><ind>-0.60</ind><dep>33</dep></entry>
			<entry><ind>0</ind><dep>33</dep></entry> 
		</interpolation>  
		<center>
			<x-m>0.0067</x-m>
			<y-m>0</y-m>
			<z-m>-0.0538</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
  <animation>
    <type>knob</type>
    <object-name>down-lock-oride-lever</object-name>
    <property>sim/model/f-14b/controls/gear/down-lock-override</property>
    <offset-deg>-10</offset-deg>
    <factor>-30</factor>
    <axis>
      <object-name>down-lock-oride-lever-axis</object-name>
    </axis>

    <action>
      <binding>
        <command>property-adjust</command>
        <property>sim/model/f-14b/controls/gear/down-lock-override</property>
        <factor>1</factor>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>knob</type>
    <object-name>nose-strut-switch</object-name>
    <property>sim/model/f-14b/controls/gear/nose-strut</property>
    <offset-deg>-10</offset-deg>
    <factor>30</factor>
    <axis>
      <object-name>nose-strut-switch-axis</object-name>
    </axis>

    <action>
      <binding>
        <command>property-adjust</command>
        <property>sim/model/f-14b/controls/gear/nose-strut</property>
        <factor>1</factor>
        <min>-1</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
		<type>select</type>
		<object-name>lamp-on</object-name>
		<condition>
			<greater-than>
				<property>gear/gear[0]/position-norm</property>
				<value>0</value>
			</greater-than>
			<less-than>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</less-than>
			<greater-than>
				<property>gear/gear[1]/position-norm</property>
				<value>0</value>
			</greater-than>
			<less-than>
				<property>gear/gear[1]/position-norm</property>
				<value>1</value>
			</less-than>
			<greater-than>
				<property>gear/gear[2]/position-norm</property>
				<value>0</value>
			</greater-than>
			<less-than>
				<property>gear/gear[2]/position-norm</property>
				<value>1</value>
			</less-than>
		</condition>  
	</animation>




	<!-- lighting -->
  <animation>
    <object-name>mount</object-name>
    <object-name>switches</object-name>
    <object-name>switches-and-levers</object-name>
    <type>material</type>
    <condition>
      <greater-than>
        <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
        <value>0</value>
      </greater-than>
      <not>
        <property>sim/rendering/rembrandt/enabled</property>
      </not>
    </condition>
    <emission>
      <factor-prop>controls/lighting/dome-norm</factor-prop>
      <red>  1.000</red>
      <green>0.576</green>
      <blue> 0.161</blue>
      <red-prop>controls/lighting/dome-red</red-prop>
      <green-prop>controls/lighting/dome-green</green-prop>
      <blue-prop>controls/lighting/dome-blue</blue-prop>
    </emission>
  </animation>

  <!-- implicit ALS lighting see http://wiki.flightgear.org/ALS_technical_notes -->
  <effect>
    <name>f14panel</name>
    <inherits-from>Effects/f14panel</inherits-from>
    <object-name>mount</object-name>
  </effect>
  <effect>
    <name>f14panel-knob</name>
    <inherits-from>Effects/f14panel-knob</inherits-from>
  </effect>

	<animation>
		<object-name>lamp-off</object-name> 
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.07</red>
			<green>0.03</green>
			<blue>0.012</blue>
		</emission>
	</animation>
	<animation>
		<object-name>lamp-on</object-name> 
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/systems/utilities/numeral-1</factor-prop>
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
		</emission>
	</animation>

</PropertyList>
