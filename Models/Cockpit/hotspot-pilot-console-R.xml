<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<PropertyList>
	<name>hotspot-pilot-console-R</name>
	<background>Aircraft/f-14b/Models/Cockpit/transparent-bg.rgb</background>
	<w>1024</w>
	<h>768</h>
	<y-offset>0</y-offset>

	<instruments>
		<instrument>
			<name>hotspot-pilot-console-R</name>
			<w>1024</w>
			<h>768</h>
			<w-base>1024</w-base>
			<h-base>1024</h-base>
			<x>512</x>
			<y>384</y>
			<layers>
				<layer>
					<name>background</name>
					<texture>
						<path>Aircraft/f-14b/Models/Cockpit/transparent-bg.rgb</path>
						<!--<path>Aircraft/f-14b/Models/Cockpit/hotspotgrid.rgb</path>-->
						<x1>0.0</x1>
						<y1>0.0</y1>
						<x2>1.0</x2>
						<y2>1.0</y2>
					</texture>
				</layer>
			</layers>
			<actions>

			<!-- Hook Bypass Switch -->
			<action>
				<name>panel-wheel-left</name>
				<button>0</button>
				<x>295</x>
				<y>90</y>
				<w>70</w>
				<h>35</h>
				<binding>
					<command>property-toggle</command>
					<property>sim/model/f-14b/controls/lighting/hook-bypass</property>
				</binding>
			</action>




			<!-- Panel (Console) Wheel -->
			<action>
				<name>panel-wheel-left</name>
				<button>0</button>
				<x>125</x>
				<y>20</y>
				<w>70</w>
				<h>30</h>
				<binding>
					<command>property-adjust</command>
					<property>controls/lighting/instruments-norm</property>
					<step>-0.1</step>
				</binding>
			</action>

			<action>
				<name>panel-wheel-right</name>
				<button>0</button>
				<x>205</x>
				<y>20</y>
				<w>70</w>
				<h>30</h>
				<binding>
					<command>property-adjust</command>
					<property>controls/lighting/instruments-norm</property>
					<step>0.1</step>
				</binding>
			</action>

			<!-- Instruments Wheel-->
			<action>
				<name>instrument-wheel-left</name>
				<button>0</button>
				<x>125</x>
				<y>-20</y>
				<w>70</w>
				<h>30</h>
				<binding>
					<command>property-adjust</command>
					<property>controls/lighting/panel-norm</property>
					<step>-0.1</step>
				</binding>
			</action>
			<action>
				<name>instrument-wheel-right</name>
				<button>0</button>
				<x>205</x>
				<y>-20</y>
				<w>70</w>
				<h>30</h>
				<binding>
					<command>property-adjust</command>
					<property>controls/lighting/panel-norm</property>
					<step>0.1</step>
				</binding>
			</action>

			<!-- Formation Slimmers Wheel-->
			<action>
				<name>formation-light-up</name>
				<button>0</button>
				<x>125</x>
				<y>-60</y>
				<w>70</w>
				<h>30</h>
				<binding>
					<command>property-adjust</command>
					<property>sim/multiplay/generic/int[1]</property>
					<step>1</step>
					<max>10</max>
				</binding>
			</action>

			<action>
				<name>formation-light-down</name>
				<button>0</button>
				<x>205</x>
				<y>-60</y>
				<w>70</w>
				<h>30</h>
				<binding>
					<command>property-adjust</command>
					<property>sim/multiplay/generic/int[1]</property>
					<step>-1</step>
					<min>0</min>
				</binding>
			</action>


			</actions>
		</instrument>
	</instruments>
</PropertyList>
