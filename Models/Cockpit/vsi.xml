<?xml version="1.0"?>

<!--F-14B IVSI (Instantaneous Vertical Speed Indicator)
    Richard Harrison (rjh@zaretto.com)  2015-05-05 Revised to match F-14B 
  -->

<PropertyList>
    <path>vsi.ac</path>

    <animation>
        <type>select</type>
        <object-name>vsi-off-flag</object-name>
        <condition>
            <not>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            </not>
        </condition>
    </animation>
    <animation>
        <name>needle</name>
        <type>rotate</type>
        <object-name>needle</object-name>
        <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
        <interpolation>
            <entry>
                <ind>-6000</ind>
                <dep>-260.0</dep>
            </entry>
            <entry>
                <ind>-4000</ind>
                <dep>-235</dep>
            </entry>
            <entry>
                <ind>-2000</ind>
                <dep>-198.0</dep>
            </entry>
            <entry>
                <ind>-1000</ind>
                <dep>-160</dep>
            </entry>
            <entry>
                <ind>-500</ind>
                <dep>-127</dep>
            </entry>
            <entry>
                <ind>0.0</ind>
                <dep>-90.0</dep>
            </entry>
            <entry>
                <ind>500</ind>
                <dep>-55</dep>
            </entry>
            <entry>
                <ind>1000</ind>
                <dep>-20</dep>
            </entry>
            <entry>
                <ind>2000</ind>
                <dep>17.0</dep>
            </entry>
            <entry>
                <ind>4000</ind>
                <dep>56</dep>
            </entry>
            <entry>
                <ind>6000.0</ind>
                <dep>79</dep>
            </entry>
        </interpolation>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <!-- lighting -->
    <animation>
        <object-name>mount</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/dome-norm</factor-prop>
            <red>  1.000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/panel-red</red-prop>
            <green-prop>controls/lighting/panel-green</green-prop>
            <blue-prop>controls/lighting/panel-blue</blue-prop>

        </emission>
    </animation>
    <animation>
        <object-name>instrument</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <greater-than-equals>
                <property>controls/lighting/instruments-norm</property>
                <property>controls/lighting/dome-norm</property>
            </greater-than-equals>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
            <red>  1.1000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/instrument-red</red-prop>
            <green-prop>controls/lighting/instrument-green</green-prop>
            <blue-prop>controls/lighting/instrument-blue</blue-prop>

        </emission>
    </animation>
    <animation>
        <object-name>instrument</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <greater-than>
                <property>controls/lighting/dome-norm</property>
                <property>controls/lighting/instruments-norm</property>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/dome-norm</factor-prop>
            <red>  1.1000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/instrument-red</red-prop>
            <green-prop>controls/lighting/instrument-green</green-prop>
            <blue-prop>controls/lighting/instrument-blue</blue-prop>
        </emission>
    </animation>
    <effect>
        <name>f14-interior</name>
        <inherits-from>Effects/f14interior</inherits-from>
        <object-name>mount</object-name>
        <object-name>instrument</object-name>
    </effect>
</PropertyList>
