<?xml version="1.0"?>

<PropertyList>

	<path>armament-panel.ac</path>

	<animation>
		<type>select</type>
		<object-name>armament-panel</object-name>
		<condition>
			<or>
				<equals>
					<property>sim/current-view/name</property>
					<value>RIO View</value>
				</equals>
				<equals>
					<property>sim/current-view/name</property>
					<value>Back-seat View</value>
				</equals>
			</or>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>launch-on</object-name>
		<condition>
			<property>sim/model/f-14b/systems/armament/launch-light</property>
		</condition>
	</animation>
  
  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>launch-on</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <interval-sec>0.05</interval-sec>
      <binding>
        <command>property-assign</command>
        <property>controls/armament/trigger</property>
        <value>true</value>
      </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property>controls/armament/trigger</property>
          <value>false</value>
        </binding>
      </mod-up>
    </action>
  </animation>

  <animation>
		<type>rotate</type>
		<object-name>sta-1-sw</object-name>
		<property>sim/model/f-14b/controls/armament/station-selector[0]</property>
		<factor>-35</factor>
		<center>
			<x-m>0.0027</x-m>
			<y-m>0.0</y-m>
			<z-m>-0.0679</z-m>
		</center>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-sta-1-up</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>nasal</command>
				<script>
					f14.station_selector(0, -1);
				</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-sta-1-down</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>nasal</command>
				<script>
					f14.station_selector(0, 1);
				</script>
			</binding>
		</action>
	</animation>

   <animation>
        <type>knob</type>
		<object-name>sta-3-sw</object-name>
		<property>sim/model/f-14b/controls/armament/station-selector[3]</property>
        <factor>30</factor>
        <center>
            <x-m>-0.0037</x-m>
            <y-m>-0.0474</y-m>
            <z-m>-0.0262</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>nasal</command>
                <script>
                    f14.station_selector(3, -1000);
                </script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
		<object-name>sta-4-sw</object-name>
		<property>sim/model/f-14b/controls/armament/station-selector[4]</property>
        <factor>30</factor>
        <center>
            <x-m>-0.0037</x-m>
            <y-m>-0.0485</y-m>
            <z-m>-0.0650</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>nasal</command>
                <script>
                    f14.station_selector(4, -1000);
                </script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
		<object-name>sta-5-sw</object-name>
		<property>sim/model/f-14b/controls/armament/station-selector[5]</property>
        <factor>30</factor>
        <center>
            <x-m>-0.0037</x-m>
            <y-m>-0.0186</y-m>
            <z-m>-0.0650</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>nasal</command>
                <script>
                    f14.station_selector(5, -1000);
                </script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
		<object-name>sta-6-sw</object-name>
		<property>sim/model/f-14b/controls/armament/station-selector[6]</property>
        <factor>30</factor>
        <center>
            <x-m>-0.0037</x-m>
            <y-m>-0.0186</y-m>
            <z-m>-0.0262</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>nasal</command>
                <script>
                    f14.station_selector(6, -1000);
                </script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
		<object-name>msl-option-sw</object-name>
		<property>sim/model/f-14b/controls/armament/msl-option-sw</property>
        <offset-deg>30</offset-deg>
        <factor>-30</factor>
        <center>
            <x-m>-0.0018</x-m>
            <y-m>-0.0054</y-m>
            <z-m>-0.1013</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
        		<property>sim/model/f-14b/controls/armament/msl-option-sw</property>
                <factor>1</factor>
                <min>0</min>
                <max>2</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>


	<animation>
		<type>rotate</type>
		<object-name>sta-8-sw</object-name>
		<property>sim/model/f-14b/controls/armament/station-selector[7]</property>
		<factor>-35</factor>
		<center>
			<x-m>0.0027</x-m>
			<y-m>0.0</y-m>
			<z-m>-0.0679</z-m>
		</center>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-sta-8-up</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>nasal</command>
				<script>
					f14.station_selector(7, -1);
				</script>
			</binding>
		</action>
	</animation> 
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-sta-8-down</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>nasal</command>
				<script>
					f14.station_selector(7, 1);
				</script>
			</binding>
		</action>
	</animation> 


	<!-- Lightning -->
  <animation>
    <object-name>mount</object-name>
    <type>material</type>
    <condition>
      <greater-than>
        <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
        <value>0</value>
      </greater-than>
      <not>
        <property>sim/rendering/rembrandt/enabled</property>
      </not>
    </condition>
    <emission>
      <factor-prop>controls/lighting/dome-norm</factor-prop>
      <red>  1.000</red>
      <green>0.576</green>
      <blue> 0.161</blue>
      <red-prop>controls/lighting/dome-red</red-prop>
      <green-prop>controls/lighting/dome-green</green-prop>
      <blue-prop>controls/lighting/dome-blue</blue-prop>
    </emission>
  </animation>

  <!-- implicit ALS lighting see http://wiki.flightgear.org/ALS_technical_notes -->
  <effect>
    <name>f14panel</name>
    <inherits-from>Effects/f14panel</inherits-from>
    <object-name>mount</object-name>
  </effect>
  <effect>
    <name>f14panel-knob</name>
    <inherits-from>Effects/f14panel-knob</inherits-from>
    <object-name>elec-fuse-knob</object-name>
    <object-name>attk-mode-knob</object-name>
    <!--<object-name>dlvy-mode-L-sw</object-name>
    <object-name>dlvy-mode-R-sw</object-name>
    <object-name>mech-fuse-sw</object-name>
    <object-name>ag-gun-sw</object-name>
    <object-name>jet-options-sw</object-name>
    <object-name>sta-1-sw</object-name>
    <object-name>sta-2-sw</object-name>
    <object-name>sta-3-sw</object-name>
    <object-name>sta-4-sw</object-name>
    <object-name>sta-5-sw</object-name>
    <object-name>sta-6-sw</object-name>
    <object-name>sta-7-sw</object-name>
    <object-name>sta-8-sw</object-name>-->
    <object-name>launch-off</object-name>
    <object-name>aspect-knob</object-name>
  </effect>


  <animation>
		<object-name>buttons</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>
	<animation>
		<object-name>drums</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>
</PropertyList>
