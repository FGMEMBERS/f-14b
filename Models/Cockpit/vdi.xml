	<!-- sky -->
	<animation>
		<name>sky-roll-rotation</name>
		<type>rotate</type>
		<object-name>sky</object-name>
		<property>orientation/roll-deg</property>
		<factor>1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0054</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<name>sky-pitch-translation</name>
		<type>translate</type>
		<object-name>sky</object-name>
		<property>orientation/pitch-deg</property>
		<interpolation>
			<entry><ind>-90</ind><dep>-0.1090</dep></entry>
			<entry><ind>-50</ind><dep>-0.1090</dep></entry>
			<entry><ind>0</ind><dep>0</dep></entry>
			<entry><ind>50</ind><dep>0.1090</dep></entry>
			<entry><ind>90</ind><dep>0.1090</dep></entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	<animation>
		<name>sky-pitch-scale</name>
		<type>scale</type>
		<object-name>sky</object-name>
		<property>orientation/pitch-deg</property>
		<z-min>1</z-min>
		<z-max>2</z-max>
		<x-factor>0</x-factor>
		<y-factor>0</y-factor>
		<z-factor>0.015</z-factor>
		<x-offset>1</x-offset>
		<y-offset>1</y-offset>
		<z-offset>1</z-offset>
	</animation>
	<animation>
		<name>horizon-line-roll-rotation</name>
		<type>rotate</type>
		<object-name>horizon-line</object-name>
		<property>orientation/roll-deg</property>
		<factor>1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0054</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<name>horizon-line-pitch-translation</name>
		<type>translate</type>
		<object-name>horizon-line</object-name>
		<property>orientation/pitch-deg</property>
		<factor>0.00218</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>

	<!-- ground -->
	<animation>
		<name>ground-roll-rotation</name>
		<type>rotate</type>
		<object-name>ground</object-name>
		<property>orientation/roll-deg</property>
		<factor>1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0054</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>ground</object-name>
		<property>sim/model/f-14b/instrumentation/ticker</property>
		<factor>0.0025</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>

	
	<!-- heading tape -->	
	<animation>
		<type>textranslate</type>
		<object-name>compas</object-name>
		<property>instrumentation/heading-indicator/indicated-heading-deg</property>
		<factor>0.002777778</factor>
		<step>1</step>
		<scroll>1</scroll>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
 
	<!-- pitch ladder -->	
	<animation>
		<type>rotate</type>
		<object-name>pitch-ladder</object-name>
		<property>orientation/roll-deg</property>
		<factor>1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>pitch-ladder</object-name>
		<property>orientation/pitch-deg</property>
		<interpolation>
			<entry><ind>90</ind><dep>0.25</dep></entry>
			<entry><ind>0</ind><dep>0</dep></entry>
			<entry><ind>-90</ind><dep>-0.25</dep></entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
 


	<!-- bank-index -->
	<animation>
		<name>bank-index-rotation</name>
		<type>rotate</type>
		<object-name>bank-index</object-name>
		<property>orientation/roll-deg</property>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>




	<animation>
		<type>translate</type>
		<object-name>rudder-index</object-name>
		<property>controls/flight/rudder</property>
		<factor>0.07B5</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<y-max>0.0756</y-max>
	</animation>


	<!-- lighting -->

	<animation>
		<object-name>mount</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.45</red>
			<green>0.34</green>
			<blue>0.18</blue>
		</emission>
	</animation>

	<animation>
		<object-name>sky</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/VDI/brightness</factor-prop>
			<red>0.0</red>
			<green>0.7</green>
			<blue>0.0</blue>
		</emission>
	</animation>
	<animation>
		<object-name>ground</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/VDI/brightness</factor-prop>
			<red>0.0</red>
			<green>0.7</green>
			<blue>0.0</blue>
		</emission>
	</animation>

	<animation>
		<object-name>reticle</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/VDI/brightness</factor-prop>
			<red>0.0</red>
			<green>0.7</green>
			<blue>0.0</blue>
		</emission>
	</animation>
	<animation>
		<object-name>ref-bars</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/VDI/brightness</factor-prop>
			<red>0.0</red>
			<green>0.7</green>
			<blue>0.0</blue>
		</emission>
	</animation>

	<animation>
		<object-name>rudder-index</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/VDI/brightness</factor-prop>
			<red>0.0</red>
			<green>0.4</green>
			<blue>0.0</blue>
		</emission>
	</animation>





	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>50</max-m>
	</animation>

</PropertyList>
