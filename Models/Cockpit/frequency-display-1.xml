<?xml version="1.0"?>

<PropertyList>

	<name>frequency-display-1</name>
	<path>radios-display.ac</path>

	<animation>
		<type>select</type>
		<object-name>radio-display</object-name>
		<condition>
			<equals>
				<property>sim/current-view/name</property>
				<value>Cockpit View</value>
			</equals>
		</condition>
	</animation>
	<!-- choose a label: VHF or UHF-VHF -->
	<animation>
		<type>select</type>
		<object-name>UHF-VHF</object-name>
		<condition>
			<property>null</property>
		</condition>
	</animation>

	<!-- Frequency Digital Display, ta-ta-ta da... -->

	<animation>
		<type>textranslate</type>
		<object-name>digit-1</object-name>
		<property>instrumentation/comm/frequencies/selected-mhz</property>
		<factor>0.001</factor>
		<offset>-100</offset>
		<step>100</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-2</object-name>
		<property>instrumentation/comm/frequencies/selected-mhz</property>
		<factor>0.01</factor>
		<offset>-10</offset>
		<step>10</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-3</object-name>
		<property>instrumentation/comm/frequencies/selected-mhz</property>
		<factor>0.1</factor>
		<offset>-1</offset>
		<step>1</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-4</object-name>
		<property>instrumentation/comm/frequencies/selected-mhz</property>
		<factor>1.0</factor>
		<offset>-0.1</offset>
		<step>0.1</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-5</object-name>
		<property>instrumentation/comm/frequencies/selected-mhz</property>
		<factor>10.0</factor>
		<offset>-0.01</offset>
		<step>0.01</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-6</object-name>
		<property>instrumentation/comm/frequencies/selected-mhz</property>
		<factor>100.0</factor>
		<offset>-0.001</offset>
		<step>0.001</step>
		<axis><y>-1</y></axis>
	</animation>


	<animation>
		<object-name>digits</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/VDI/brightness</factor-prop>
			<red>0.7</red>
			<green>0.0</green>
			<blue>0.0</blue>
		</emission>
	</animation>

	<animation>
		<object-name>mount</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>







	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>50</max-m>
	</animation>

</PropertyList>
