<?xml version="1.0"?>


<PropertyList>

	<path>group-cockpit.ac</path>

	<!-- select for modeling purpose only -->
	<animation>
		<type>select</type>
		<object-name>mCanopy</object-name>
		<object-name>mWindshield</object-name>
		<object-name>m-stby-adi</object-name>
		<object-name>m-asi</object-name>
		<condition>
			<property>sim/model/f-14b/modeling/show-canopy</property>
		</condition>
	</animation>

<!-- De-select Pilot when in Cockpit View -->
	<animation>
		<type>select</type>
		<object-name>Pilot</object-name>
		<object-name>RIO</object-name>
		<condition>
			<not>
				<equals>
					<property>sim/current-view/name</property>
					<value>Cockpit View</value>
				</equals>
			</not>
		</condition>
	</animation>

