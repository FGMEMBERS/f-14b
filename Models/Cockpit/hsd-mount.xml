<?xml version="1.0"?>

<!--Horizontal Situation Display F-14B -->

<PropertyList>
	<path>hsd-mount.ac</path>

	<!-- mode selection -->
	<animation>
		<type>select</type>
		<object-name>screen-bkg</object-name>
		<condition>
			<property>sim/model/f-14b/controls/HSD/on-off</property>
               <greater-than>
                  <property>/fdm/jsbsim/systems/electrics/ac-left-main-bus</property>
                  <value>0</value>
                </greater-than>
		</condition>
	</animation>

	<!-- lighting -->
	<animation>
		<object-name>screen-bkg</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/VDI/contrast</factor-prop>
			<red>0.0</red>
			<green>0.7</green>
			<blue>0.0</blue>
		</emission>
	</animation>
  <animation>
    <object-name>mount</object-name>
    <type>material</type>
    <condition>
      <greater-than>
        <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
        <value>0</value>
      </greater-than>
      <not>
        <property>sim/rendering/rembrandt/enabled</property>
      </not>
    </condition>
    <emission>
      <factor-prop>controls/lighting/dome-norm</factor-prop>
      <red>  1.000</red>
      <green>0.576</green>
      <blue> 0.161</blue>
      <red-prop>controls/lighting/dome-red</red-prop>
      <green-prop>controls/lighting/dome-green</green-prop>
      <blue-prop>controls/lighting/dome-blue</blue-prop>
    </emission>
  </animation>

  <!-- implicit ALS lighting see http://wiki.flightgear.org/ALS_technical_notes -->
  <effect>
    <name>f14panel</name>
    <inherits-from>Aircraft/f-14b/Models/Effects/f14panel</inherits-from>
    <object-name>symbols</object-name>
  </effect>
  <effect>
    <name>f14panel-knob</name>
    <inherits-from>Aircraft/f-14b/Models/Effects/f14panel-knob</inherits-from>
  </effect>


</PropertyList>
