<?xml version="1.0"?>

<PropertyList>

	<path>aoa-indexer.ac</path>

	<animation>
		<type>select</type>
		<object-name>aoa-too-slow</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<greater-than>
				<property>orientation/alpha-deg</property>
			<property>sim/model/f-14b/instrumentation/aoa-indexer/too-slow-deg</property>
			</greater-than>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>aoa-slow</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<less-than>
				<property>orientation/alpha-deg</property>
				<property>sim/model/f-14b/instrumentation/aoa-indexer/too-slow-deg</property>
			</less-than>
			<greater-than>
				<property>orientation/alpha-deg</property>
				<property>sim/model/f-14b/instrumentation/aoa-indexer/slow-deg</property>
			</greater-than>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>aoa-on-speed</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<less-than>
				<property>orientation/alpha-deg</property>
				<property>sim/model/f-14b/instrumentation/aoa-indexer/slow-deg</property>
			</less-than>
			<greater-than>
				<property>orientation/alpha-deg</property>
				<property>sim/model/f-14b/instrumentation/aoa-indexer/fast-deg</property>
			</greater-than>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>aoa-fast</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<less-than>
				<property>orientation/alpha-deg</property>
				<property>sim/model/f-14b/instrumentation/aoa-indexer/fast-deg</property>
			</less-than>
			<greater-than>
				<property>orientation/alpha-deg</property>
				<property>sim/model/f-14b/instrumentation/aoa-indexer/too-fast-deg</property>
			</greater-than>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>aoa-too-fast</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<less-than>
				<property>orientation/alpha-deg</property>
				<property>sim/model/f-14b/instrumentation/aoa-indexer/too-fast-deg</property>
			</less-than>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

<!-- Warning Lights -->
	<animation>
		<type>select</type>
		<object-name>wheels-lit</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<or>
				<less-than>
					<property>gear/gear[0]/position-norm</property>
					<value>1</value>
				</less-than>
				<less-than>
					<property>gear/gear[1]/position-norm</property>
					<value>1</value>
				</less-than>
				<less-than>
					<property>gear/gear[2]/position-norm</property>
					<value>1</value>
				</less-than>
			</or>
			<greater-than>
				<property>surface-positions/main-flap-pos-norm</property>
				<value>0.286</value>
			</greater-than>
			<less-than>
				<property>controls/engines/engine[0]/throttle</property>
				<value>0.58</value>
			</less-than>
			<property>sim/model/f-14b/lighting/warn-medium-lights-switch/state</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>acls-lit</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<property>sim/model/f-14b/instrumentation/acls/engaged</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>brakes-lit</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<property>controls/gear/brake-parking</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>nws-lit</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<property>sim/model/f-14b/instrumentation/gears/nose-wheel-steering-warnlight</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>throt-lit</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<property>sim/model/f-14b/systems/apc/self-disengaged</property>
		</condition>
	</animation>





	<!-- lighting -->
