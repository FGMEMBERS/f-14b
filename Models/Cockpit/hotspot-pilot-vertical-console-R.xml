<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<PropertyList>
	<name>hotspot-pilot-vertical-console-R</name>
	<background>Aircraft/f-14b/Models/Cockpit/transparent-bg.rgb</background>
	<w>1024</w>
	<h>768</h>
	<y-offset>0</y-offset>

	<instruments>
		<instrument>
			<name>hotspot-pilot-vertical-console-R</name>
			<w>1024</w>
			<h>768</h>
			<w-base>1024</w-base>
			<h-base>1024</h-base>
			<x>512</x>
			<y>384</y>
			<layers>
				<layer>
					<name>background</name>
					<texture>
						<path>Aircraft/f-14b/Models/Cockpit/transparent-bg.rgb</path>
						<!--<path>Aircraft/f-14b/Models/Cockpit/hotspotgrid.rgb</path>-->
						<x1>0.0</x1>
						<y1>0.0</y1>
						<x2>1.0</x2>
						<y2>1.0</y2>
					</texture>
				</layer>
			</layers>
			<actions>

			<!-- Hook Handle -->
			<action>
				<name>hook-handle-up</name>
				<button>0</button>
				<x>-380</x>
				<y>340</y>
				<w>180</w>
				<h>90</h>
				<binding>
					<command>property-assign</command>
					<property>controls/gear/tailhook</property>
					<value type="double">0.0</value>
				</binding>
			</action>
			<action>
				<name>hook-handle-down</name>
				<button>0</button>
				<x>-380</x>
				<y>240</y>
				<w>180</w>
				<h>90</h>
				<binding>
					<command>property-assign</command>
					<property>controls/gear/tailhook</property>
					<value type="double">1.0</value>
				</binding>
			</action>



			<!-- Displays Panel -->
			<!-- Mode -->
			<action>
				<name>to-toggle</name>
				<button>0</button>
				<x>-450</x>
				<y>100</y>
				<w>160</w>
				<h>45</h>
				<binding>
					<command>nasal</command>
					<script>f14_instruments.radio_bt_sel("sim/model/f-14b/controls/pilots-displays/mode", "to-bt")</script>
				</binding>
			</action>

			<action>
				<name>cruise-toggle</name>
				<button>0</button>
				<x>-450</x>
				<y>50</y>
				<w>160</w>
				<h>45</h>
				<binding>
					<command>nasal</command>
					<script>f14_instruments.radio_bt_sel("sim/model/f-14b/controls/pilots-displays/mode", "cruise-bt")</script>
				</binding>
			</action>

			<action>
				<name>aa-toggle</name>
				<button>0</button>
				<x>-450</x>
				<y>0</y>
				<w>160</w>
				<h>45</h>
				<binding>
					<command>nasal</command>
					<script>f14_instruments.radio_bt_sel("sim/model/f-14b/controls/pilots-displays/mode", "aa-bt")</script>
				</binding>
			</action>

			<action>
				<name>ag-toggle</name>
				<button>0</button>
				<x>-450</x>
				<y>-50</y>
				<w>160</w>
				<h>45</h>
				<binding>
					<command>nasal</command>
					<script>f14_instruments.radio_bt_sel("sim/model/f-14b/controls/pilots-displays/mode", "ag-bt")</script>
				</binding>
			</action>

			<action>
				<name>ldg-toggle</name>
				<button>0</button>
				<x>-450</x>
				<y>-100</y>
				<w>160</w>
				<h>45</h>
				<binding>
					<command>nasal</command>
					<script>f14_instruments.radio_bt_sel("sim/model/f-14b/controls/pilots-displays/mode", "ldg-bt")</script>
				</binding>
			</action>


			<!-- HSD Mode Switch -->
			<action>
				<name>HSD-mode-up</name>
				<button>0</button>
				<x>-200</x>
				<y>-30</y>
				<w>90</w>
				<h>30</h>
				<binding>
					<command>property-adjust</command>
					<property>sim/model/f-14b/controls/pilots-displays/hsd-mode-nav</property>
					<step>1</step>
					<max>1</max>
					<wrap>false</wrap>
				</binding>
			</action>
			<action>
				<name>HSD-mode-down</name>
				<button>0</button>
				<x>-200</x>
				<y>-65</y>
				<w>90</w>
				<h>30</h>
				<binding>
					<command>property-adjust</command>
					<property>sim/model/f-14b/controls/pilots-displays/hsd-mode-nav</property>
					<step>-1</step>
					<min>-1</min>
					<wrap>false</wrap>
				</binding>
			</action>



			</actions>
		</instrument>
	</instruments>
</PropertyList>
