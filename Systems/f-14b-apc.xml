<?xml version="1.0"?>

<!--
        Description: F14 APC (Approach Power Compensator) - a sort of autothrottle.
        Author: Richard Harrison (rjh@zaretto.com)
        References: F14-AAD-1 p2-27, p17-3
                    JSBSim p51d/Systems/autothrottle.xml
    -->


<system name="APC">

    <property value="8"> systems/apc/pid-kd </property>
    <property value="0"> systems/apc/pid-ki </property>
    <property value="10"> systems/apc/pid-kp </property>
    <property value="100"> systems/apc/max-diff</property>
    <property value="-100"> systems/apc/min-diff</property>

    <property value="1.0"> systems/apc/throttle-gain </property>

    <property value="0">systems/apc/target-alpha</property>
    <property value="0">systems/apc/active</property>

    <channel name="APC">

<!-- doesn't work because the APC is overwriting the throttle values to control the engines
    <switch name="systems/apc/disengage-flag">
          <default value="0"/>
            <test value="0">
                systems/apc/active eq 0
           </test>
          <test  value="systems/apc/disengage">
             systems/apc/disengage ne 0
          </test>
          <test  logic="OR" value="1">
            fcs/throttle-pos-norm[0] ne systems/apc/throttle-cmd[0]
            fcs/throttle-pos-norm[1] ne systems/apc/throttle-cmd[1]
          </test>
          <output>systems/apc/disengage</output>
    </switch>
-->
        <!-- ensure within operating envelope -->
        <switch name="systems/apc/trigger">
            <default value="0.0"/>

            <test value="1.0">
                <and>
                    propulsion/engine[0]/set-running == 0
                    propulsion/engine[1]/set-running == 0
                    systems/apc/active ne 0
                    systems/apc/target-alpha gt 110
                </and>
            </test>

        </switch>

        <summer name="systems/apc/divergence">
            <input> aero/alpha-indicated-deg </input>
            <input> -systems/apc/target-alpha </input>
            <clipto>
                <min> systems/apc/min-diff </min>
                <max> systems/apc/max-diff</max>
            </clipto>
        </summer>

        <switch name="systems/apc/switch">
            <default value="0.0"/>
            <test value="systems/apc/divergence">
                systems/apc/active == 1
            </test>
        </switch>

        <pid name="systems/apc/divergence-pid">
            <input>systems/apc/switch</input>
            <kp> systems/apc/pid-kp </kp>
            <ki> systems/apc/pid-ki </ki>
            <kd> systems/apc/pid-kd </kd>
            <trigger> systems/apc/trigger </trigger>
        </pid>

        <pure_gain name="systems/apc/divergence-pid-contents">
            <input> systems/apc/divergence-pid </input>
            <gain> 1.0 </gain>
            <output>systems/apc/divergence-pid-contents</output>
        </pure_gain>

        <pure_gain name="">
            <input> systems/apc/divergence-pid </input>
            <gain> systems/apc/throttle-gain </gain>
            <clipto>
                <min> -1</min>
                <max> 0.913</max>
            </clipto>
            <output>systems/apc/throttle-cmd-delta</output>
        </pure_gain>

        <switch name="systems/apc/throttle-cmd[0]">
            <default value="fcs/throttle-cmd-norm[0]"/>
            <test value="systems/apc/throttle-cmd-delta">
                systems/apc/active == 1
            </test>
        </switch>

        <switch name="systems/apc/throttle-cmd[1]">
            <default value="fcs/throttle-cmd-norm[1]"/>
            <test value="systems/apc/throttle-cmd-delta">
                systems/apc/active == 1
            </test>
        </switch>

        <summer name="systems/apc/throttle[0]">
            <input>systems/apc/throttle-cmd[0]</input>
            <clipto>
                <min> 0</min>
                <max>  1</max>
            </clipto>
            <output>fcs/throttle-pos-norm[0]</output>
        </summer>

        <summer name="systems/apc/throttle[1]">
            <input>systems/apc/throttle-cmd[1]</input>
            <clipto>
                <min> 0</min>
                <max>  1</max>
            </clipto>
            <output>fcs/throttle-pos-norm[1]</output>
        </summer>
    </channel>
</system>