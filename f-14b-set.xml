<?xml version="1.0"?>

<PropertyList>

	<sim>
		<description>Grumman F-14B </description>
		<author>Enrique Laso</author>
		<status>early-production</status>

		<flight-model>yasim</flight-model>
		<aero>f-14b-yasim</aero>
		<fuel-fraction>1.0</fuel-fraction>

		<systems>
			<autopilot>
				<path>Aircraft/f-14b/f-14b-AFCS.xml</path>
			</autopilot>
		</systems>

		<startup>
			<splash-texture>Aircraft/f-14b/f-14b-splash.rgb</splash-texture>
		</startup>

		<gui>
			<style>
			<colors>
				<splash-screen>
					<red>0.57</red>
					<green>0.60</green>
					<blue>0.60</blue>
				</splash-screen>
			</colors>
			</style>
		</gui>

		<sound>
			<path>Aircraft/f-14b/f-14b-sound.xml</path>
		</sound>

		<help>
			<title>Grumman F-14B</title>
			<key>
				<name>Home</name>
				<desc>Increase elevator trim</desc>
			</key>
			<key>
				<name>End</name>
				<desc>Decrease elevator trim</desc>
			</key>

			<key>
				<name>f</name>
				<desc>Lower flaps</desc>
			</key>
			<key>
				<name>F</name>
				<desc>Raise flaps</desc>
			</key>
			<key>
				<name>E</name>
				<desc>Decrease Radar Range</desc>
			</key>
			<key>
				<name>R</name>
				<desc>Increase Radar Range</desc>
			</key>

			<key>
				<name>s</name>
				<desc>Increase speed brakes</desc>
			</key>
			<key>
				<name>S</name>
				<desc>Decrease speed brakes</desc>
			</key>
			<key>
				<name>a</name>
				<desc>Toggle APC</desc>
			</key>
			<key>
				<name>Ctrl-d</name>
				<desc>Toggle DLC</desc>
			</key>
			<key>
				<name>d</name>
				<desc>DLC increase</desc>
			</key>
			<key>
				<name>D</name>
				<desc>DLC decrease</desc>
			</key>
			<key>
				<name>Ctrl-s</name>
				<desc>Toggle ground spoilers armed</desc>
			</key>
			<key>
				<name>e</name>
				<desc>Toggle canopy and access ladder</desc>
			</key>
			<key>
				<name>u</name>
				<desc>Toggle refuelling probe</desc>
			</key>
			<key>
				<name>Ctrl-o</name>
				<desc>Toggle oversweep</desc>
			</key>

			<!--<line>External fuel tanks ?</line>
			<line>  Menu > Equipment > Fuel and Payload</line>
			<line>__________________________________________________</line>-->

		</help>

		<hud>
			<path n="1">Aircraft/f-14b/Hud/F-14.xml</path>
			<visibility n="1">true</visibility>
			<palette>
				<color n="0">
					<alpha type="float">1</alpha>
					<antialiased type="bool">true</antialiased>
					<brightness type="float">1</brightness>
					<transparent type="bool">true</transparent>
					<red type="float">0.38</red>
					<green type="float">1.0</green>
					<blue type="float">0.22</blue>
				</color>
				<color n="1">
					<alpha type="float">1</alpha>
					<antialiased type="bool">true</antialiased>
					<brightness type="float">1</brightness>
					<transparent type="bool">true</transparent>
					<red type="float">1.0</red>
					<green type="float">0.2</green>
					<blue type="float">0.0</blue>
				</color>
			</palette>
		</hud>

		<model>
			<path>Aircraft/f-14b/Models/f-14b.xml</path>
			<f-14b>
				<controls>
					<fuel>
						<bingo type="int">11500</bingo>
					</fuel>
					<hud>
						<intens type="double">1</intens>
					</hud>
					<lighting>
						<index-norm type="double">1</index-norm>
						<hook-bypass type="bool">false</hook-bypass><!-- false = carrier -->
					</lighting>
					<VDI>
						<brightness type="double">1</brightness>
					</VDI>
					<pilots-displays>
						<mode>
							<to-bt type="bool">false</to-bt>
							<cruise-bt type="bool">true</cruise-bt>
							<aa-bt type="bool">false</aa-bt>
							<ag-bt type="bool">false</ag-bt>
							<ldg-bt type="bool">false</ldg-bt>
						</mode>
						<steer>
							<man-bt type="bool">false</man-bt>
							<tacan-bt type="bool">true</tacan-bt>
							<awl-bt type="bool">false</awl-bt>
							<dest-bt type="bool">false</dest-bt>
							<vec-bt type="bool">false</vec-bt>
						</steer>
						<hsd-mode-nav type="int">1</hsd-mode-nav><!-- 1=NAV, 0=TID, -1=ECM -->
					</pilots-displays>
				</controls>
				<instrumentation>
					<airspeed-indicator>
						<safe-speed-limit-bug type="double">830</safe-speed-limit-bug>
					</airspeed-indicator>
					<aoa-indexer>
						<!-- target = 10 deg AoA -->
						<too-slow-deg>15.9</too-slow-deg>	<!-- target +2.4 deg -->
						<slow-deg>14.3</slow-deg>			<!-- target +0.8 deg -->
						<fast-deg>12.7</fast-deg>			<!-- target -0.8 deg -->
						<too-fast-deg>11.1</too-fast-deg>	<!-- target -2.4 deg -->
					</aoa-indexer>
					<acls>
						<engaged type="bool">false</engaged>
					</acls>
					<g-meter>
						<g-max archive="y" type="double">1</g-max>
						<g-min archive="y" type="double">1</g-min>
					</g-meter>
					<radar-altimeter>
						<limit-bug type="double">250</limit-bug>
					</radar-altimeter>
				</instrumentation>
				<livery>
					<path type="string">RedRippers1</path>
				</livery>
				<modeling>
					<show-canopy type="bool">false</show-canopy>
				</modeling>
				<systems>
					<afcs>
						<engaged type="bool">false</engaged>
						<target-roll-deg type="double">0</target-roll-deg>
					</afcs>
					<apc>
						<self-disengaged type="bool">false</self-disengaged>
					</apc>
					<gun>
						<rounds type="int">200</rounds>
					</gun>
					<wing-sweep>
						<mode>
							<off type="bool">false</off>
							<auto type="bool">true</auto>
							<man type="bool">false</man>
							<emer type="bool">false</emer>
							<over type="bool">false</over>
						</mode>
					</wing-sweep>
				</systems>
			</f-14b>
		</model>

		<multiplay>
			<generic>
				<float n="0">0</float><!-- wing-sweep -->
				<float n="1">0</float><!-- main flaps -->
				<float n="2">0</float><!-- aux flaps  -->
				<float n="3">0</float><!-- slats      -->
				<float n="4">0</float><!-- left elevator  -->
				<float n="5">0</float><!-- right elevator -->
				<float n="6">0</float><!-- refuel probe -->
			</generic>
		</multiplay>

		<panel>
			<path>Aircraft/f-14b/Panels/2D.xml</path>
			<visibility archive="y">false</visibility>
		</panel>

		<!-- f-14b is currently mostly used by v1.0 users
		so let's disable CVS version builtin and instead use some good old stuff -->
		<!--<rendering>
			<redout>
				<parameters>
					<blackout-complete-g>6</blackout-complete-g>
					<blackout-onset-g>4.5</blackout-onset-g>
				</parameters>
			</redout>
		</rendering>-->

		<submodels>
			<serviceable>true</serviceable>
			<path>Aircraft/f-14b/submodels.xml</path>
		</submodels>

		<menubar>
			<default>
				<menu n="50">
					<label>Tomcat controls</label>
					<item n="0">
						<label>Repair Airframe</label>
						<binding>
							<command>nasal</command>
							<script>f14.fixAirframe();</script>
						</binding>
					</item>
					<item n="1">
						<label>Select Livery</label>
						<binding>
							<command>nasal</command>
							<script>aircraft.livery.dialog.toggle()</script>
						</binding>
					</item>
					<item n="2">
						<label>Toggle Heat Blur</label>
						<binding>
							<command>nasal</command>
							<script>f14.switchHeatBlur();</script>
						</binding>
					</item>
				</menu>
			</default>
		</menubar>

		<view n="0">
			<name>Cockpit View</name>
			<type>lookfrom</type>
			<internal archive="y">true</internal>
			<config>
				<x-offset-m archive="y">0.0</x-offset-m>
				<y-offset-m archive="y">0.34</y-offset-m>
				<z-offset-m archive="y">-5.1708</z-offset-m>
				<pitch-offset-deg>-14.7</pitch-offset-deg>
				<default-field-of-view-deg>55</default-field-of-view-deg>
			</config>
		</view>

		<view n="1">
			<config>
				<target-z-offset-m archive="y" type="double">0</target-z-offset-m>
				<pitch-offset-deg>0</pitch-offset-deg>
			</config>
		</view>
		<view n="2">
			<config>
				<y-offset-m archive="y" type="double">6.0</y-offset-m>
				<z-offset-m archive="y">-19.7</z-offset-m>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>
		<view n="3">
			<config>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>
		<view n="4">
			<config>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>
		<view n="5">
			<config>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>
		<view n="6">
			<config>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>

	</sim>

	<systems>
		<electrical>
			<path>Aircraft/f-14b/Systems/f-14b-electrical.xml</path>
		</electrical>
	</systems>

	<consumables>
		<fuel>
			<tank n="0">
				<level-lbs archive="y">4700</level-lbs>
			</tank>
			<tank n="1">
				<level-lbs archive="y">4400</level-lbs>
			</tank>
			<tank n="2">
				<level-lbs archive="y">1550</level-lbs>
			</tank>
			<tank n="3">
				<level-lbs archive="y">1550</level-lbs>
			</tank>
			<tank n="4">
				<level-lbs archive="y">2000</level-lbs>
			</tank>
			<tank n="5">
				<level-lbs archive="y">2000</level-lbs>
			</tank>
		</fuel>
	</consumables>

	<controls>
		<lighting>
			<instruments-norm type="double">0</instruments-norm>
			<panel-norm type="double">0</panel-norm>
			<strobe type="bool">false</strobe>
			<nav-lights type="bool">true</nav-lights>
		</lighting>
		<flight>
			<ground-spoilers-armed type="bool"> false </ground-spoilers-armed>
			<fake>0.0</fake>
		</flight>
		<gear>
			<!-- Start with the Parking Brake on -->
			<brake-parking type="double">1.0</brake-parking>
		</gear>
	</controls>

	<engines>
		<engine n="0">
			<running>true</running>
		</engine>
	</engines>

	<f-14>
		<SAS>
			<engaged>true</engaged>
			<pitch-bias type="float">0.0</pitch-bias>
			<yaw-bias type="float">0.0</yaw-bias>
			<roll-bias type="float">0.0</roll-bias>
		</SAS>
		<livery-number type="int">0</livery-number>
		<heat-blur-on type="bool">false</heat-blur-on>
	</f-14>

	<input>
		<keyboard include="../../Input/Keyboard/carrier-bindings.xml">

			<key n="4">
				<name>CTRL-d</name>
				<desc>DLC toggle</desc>
				<binding>
					<command>nasal</command>
					<script>f14.toggleDLC();</script>
				</binding>
			</key>

			<key n="15">
				<name>Ctrl-o</name>
				<desc>toggle oversweep</desc>
				<binding>
					<command>nasal</command>
					<script>f14.toggleOversweep();</script>
				</binding>
			</key>

			<key n="19">
				<name>Ctrl-s</name>
				<desc>Toggle ground spoilers armed</desc>
				<binding>
					<command>nasal</command>
					<script>f14.toggleGroundSpoilers();</script>
				</binding>
			</key>

			<key n="68">
				<name>D</name>
				<desc>DLC decrease</desc>
				<binding>
					<command>property-adjust</command>
					<property>/controls/flight/DLC</property>
					<step>-0.1</step>
					<min>0</min>
				</binding>
			</key>

			<key n="69">
				<name>E</name>
				<desc>Decrease Radar Range</desc>
				<binding>
					<command>nasal</command>
					<script>f14_radar.range_control(-1);</script>
				</binding>
			</key>

			<key n="70">
				<name>F</name>
				<desc>Raise flaps</desc>
				<binding>
					<command>nasal</command>
					<script>f14.raiseFlaps();</script>
				</binding>
			</key>

			<key n="82">
				<name>R</name>
				<desc>Increase Radar Range</desc>
				<binding>
					<command>nasal</command>
					<script>f14_radar.range_control(1);</script>
				</binding>
			</key>

			<key n="83">
				<name>S</name>
				<desc>Decrease speed brakes</desc>
				<binding>
					<command>nasal</command>
					<script>f14.speedBrakesIn();</script>
				</binding>
			</key>

			<key n="97">
				<name>a</name>
				<desc>toggle APC</desc>
				<binding>
					<command>nasal</command>
					<script>f14.toggleAPC();</script>
				</binding>
			</key>

			<key n="100">
				<name>d</name>
				<desc>DLC increase</desc>
				<binding>
					<command>property-adjust</command>
					<property>/controls/flight/DLC</property>
					<step>0.1</step>
					<max>1.0</max>
				</binding>
			</key>

			<key n="101">
				<name>e</name>
				<desc>Open canopy and access ladder</desc>
				<binding>
					<command>nasal</command>
					<script>f14.toggleAccess();</script>
				</binding>
			</key>

			<key n="102">
				<name>f</name>
				<desc>Lower flaps</desc>
				<binding>
					<command>nasal</command>
					<script>f14.lowerFlaps();</script>
				</binding>
			</key>

			<key n="115">
				<name>s</name>
				<desc>Increase speed brakes</desc>
				<binding>
					<command>nasal</command>
					<script>f14.speedBrakesOut();</script>
				</binding>
			</key>

			<key n="117">
				<name>u</name>
				<desc>Toggle refuelling probe</desc>
				<binding>
					<command>nasal</command>
					<script>f14.toggleProbe();</script>
				</binding>
			</key>

			<key n="362">
				<name>Home</name>
				<desc>Increase elevator trim</desc>
				<binding>
					<command>nasal</command>
					<script>f14.trimUp();</script>
				</binding>
			</key>

			<key n="363">
				<name>End</name>
				<desc>Decrease elevator trim</desc>
				<binding>
					<command>nasal</command>
					<script>f14.trimDown();</script>
				</binding>
			</key>


		</keyboard>
	</input>

	<instrumentation>
		<tacan>
			<switch-position type="int">1</switch-position>
		</tacan>
		<radar>
			<range type="double">50</range>
		</radar>
	</instrumentation>

	<nasal>
		<f14>
			<file>Aircraft/f-14b/Nasal/f14_globals.nas</file>
			<file>Aircraft/f-14b/Nasal/flaps_computer.nas</file>
			<file>Aircraft/f-14b/Nasal/drag_computer.nas</file>   
			<file>Aircraft/f-14b/Nasal/engines.nas</file>
			<file>Aircraft/f-14b/Nasal/sweep_computer.nas</file>
			<file>Aircraft/f-14b/Nasal/gear.nas</file>
			<file>Aircraft/f-14b/Nasal/engines.nas</file>
			<file>Aircraft/f-14b/Nasal/spoilers.nas</file>
			<file>Aircraft/f-14b/Nasal/SAS.nas</file>
			<file>Aircraft/f-14b/Nasal/adverse.nas</file>
			<file>Aircraft/f-14b/Nasal/f-14b.nas</file>
		</f14>
		<f14_hud>
			<file>Aircraft/f-14b/Nasal/hud.nas</file>
		</f14_hud>
		<f14_radar>
			<file>Aircraft/f-14b/Nasal/radar.nas</file>
		</f14_radar>
		<f14_chronograph>
			<file>Aircraft/f-14b/Nasal/chronograph.nas</file>
		</f14_chronograph>
		<f14_instruments>
			<file>Aircraft/f-14b/Nasal/instruments.nas</file>
		</f14_instruments>
		<aar>
			<file>Aircraft/Generic/aar.nas</file>
		</aar>
	</nasal>

</PropertyList>
