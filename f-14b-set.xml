	<input>
		<keyboard include="../../Input/Keyboard/carrier-bindings.xml">

			<key n="1">
				<name>CTRL-a</name>
				<desc>Toggle autopilot altitude mode.</desc>
				<binding>
					<command>nasal</command>
					<script>f14_afcs.afcs_altitude_engage_toggle();</script>
				</binding>
			</key>

			<key n="4">
				<name>CTRL-d</name>
				<desc>DLC toggle</desc>
				<binding>
					<command>nasal</command>
					<script>f14.toggleDLC();</script>
				</binding>
			</key>

			<key n="8">
				<name>CTRL-h</name>
				<desc>Toggle autopilot heading mode.</desc>
				<binding>
					<command>nasal</command>
					<script>f14_afcs.afcs_heading_switch(0);</script>
				</binding>
			</key>

			<key n="15">
				<name>Ctrl-o</name>
				<desc>toggle oversweep</desc>
				<binding>
					<command>nasal</command>
					<script>f14.toggleOversweep();</script>
				</binding>
			</key>

			<key n="19">
				<name>Ctrl-s</name>
				<desc>Toggle ground spoilers armed</desc>
				<binding>
					<command>nasal</command>
					<script>f14.toggleGroundSpoilers();</script>
				</binding>
			</key>

			<key n="20">
				<name>CTRL-t</name>
				<desc>Toggle autopilot attitude mode.</desc>
				<binding>
					<command>nasal</command>
					<script>f14_afcs.afcs_engage_toggle()</script>
				</binding>
			</key>

			<key n="42">
				<name>*</name>
				<desc>Nose wheel steering or Autopilot selected mode</desc>
				<binding>
					<command>nasal</command>
					<script>
					var wow = getprop ("/gear/gear[1]/wow") or getprop ("/gear/gear[2]/wow");
					if (! wow) {
						print("select");
						f14_afcs.afcs_engage_selected_mode()
					}
					</script>
				</binding>
			</key>

			<key n="68">
				<name>D</name>
				<desc>DLC decrease</desc>
				<binding>
					<command>property-adjust</command>
					<property>/controls/flight/DLC</property>
					<step>-0.1</step>
					<min>0</min>
				</binding>
			</key>

			<key n="69">
				<name>E</name>
				<desc>Decrease Radar Range</desc>
				<binding>
					<command>nasal</command>
					<script>f14_radar.range_control(-1);</script>
				</binding>
			</key>

			<key n="70">
				<name>F</name>
				<desc>Raise flaps</desc>
				<binding>
					<command>nasal</command>
					<script>f14.raiseFlaps();</script>
				</binding>
			</key>

			<key n="82">
				<name>R</name>
				<desc>Increase Radar Range</desc>
				<binding>
					<command>nasal</command>
					<script>f14_radar.range_control(1);</script>
				</binding>
			</key>

			<key n="83">
				<name>S</name>
				<desc>Decrease speed brakes</desc>
				<binding>
					<command>nasal</command>
					<script>f14.speedBrakesIn();</script>
				</binding>
			</key>

			<key n="97">
				<name>a</name>
				<desc>toggle APC</desc>
				<binding>
					<command>nasal</command>
					<script>f14.toggleAPC();</script>
				</binding>
			</key>

			<key n="100">
				<name>d</name>
				<desc>DLC increase</desc>
				<binding>
					<command>property-adjust</command>
					<property>/controls/flight/DLC</property>
