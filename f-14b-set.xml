<?xml version="1.0"?>

<PropertyList>

	<sim>
		<description>Grumman F-14B </description>
		<author>Enrique Laso</author>
		<status>early-production</status>

		<flight-model>yasim</flight-model>
		<aero>f-14b-yasim</aero>
		<fuel-fraction>1.0</fuel-fraction>

		<systems>
			<autopilot>
				<path>Aircraft/f-14b/f-14b-AFCS.xml</path>
			</autopilot>
		</systems>

		<startup>
			<splash-texture>Aircraft/f-14b/f-14b-splash.rgb</splash-texture>
		</startup>

		<gui>
			<style>
			<colors>
				<splash-screen>
					<red>0.57</red>
					<green>0.60</green>
					<blue>0.60</blue>
				</splash-screen>
			</colors>
			</style>
		</gui>

		<sound>
			<path>Aircraft/f-14b/f-14b-sound.xml</path>
		</sound>

		<help>
			<title>Grumman F-14B</title>
			<key>
				<name>Home</name>
				<desc>Increase elevator trim</desc>
			</key>
			<key>
				<name>End</name>
				<desc>Decrease elevator trim</desc>
			</key>

			<key>
				<name>f</name>
				<desc>Lower flaps</desc>
			</key>
			<key>
				<name>F</name>
				<desc>Raise flaps</desc>
			</key>
			<key>
				<name>E</name>
				<desc>Decrease Radar Range</desc>
			</key>
			<key>
				<name>R</name>
				<desc>Increase Radar Range</desc>
			</key>

			<key>
				<name>s</name>
				<desc>Increase speed brakes</desc>
			</key>
			<key>
				<name>S</name>
				<desc>Decrease speed brakes</desc>
			</key>
			<key>
				<name>a</name>
				<desc>Toggle APC</desc>
			</key>
			<key>
				<name>Ctrl-d</name>
				<desc>Toggle DLC</desc>
			</key>
			<key>
				<name>d</name>
				<desc>DLC increase</desc>
			</key>
			<key>
				<name>D</name>
				<desc>DLC decrease</desc>
			</key>
			<key>
				<name>Ctrl-s</name>
				<desc>Toggle ground spoilers armed</desc>
			</key>
			<key>
				<name>e</name>
				<desc>Toggle canopy and access ladder</desc>
			</key>
			<key>
				<name>u</name>
				<desc>Toggle refuelling probe</desc>
			</key>
			<key>
				<name>Ctrl-o</name>
				<desc>Toggle oversweep</desc>
			</key>

			<!--<line>External fuel tanks ?</line>
			<line>  Menu > Equipment > Fuel and Payload</line>
			<line>__________________________________________________</line>-->

		</help>

		<hud>
			<path n="1">Aircraft/f-14b/Hud/F-14.xml</path>
			<visibility n="1">false</visibility>
			<palette>
				<color n="0">
					<alpha type="float">1</alpha>
					<antialiased type="bool">true</antialiased>
					<brightness type="float">1</brightness>
					<transparent type="bool">true</transparent>
					<red type="float">0.38</red>
					<green type="float">1.0</green>
					<blue type="float">0.22</blue>
				</color>
				<color n="1">
					<alpha type="float">1</alpha>
					<antialiased type="bool">true</antialiased>
					<brightness type="float">1</brightness>
					<transparent type="bool">true</transparent>
					<red type="float">1.0</red>
					<green type="float">0.2</green>
					<blue type="float">0.0</blue>
				</color>
			</palette>
		</hud>

		<model>
			<path>Aircraft/f-14b/Models/f-14b.xml</path>
			<f-14b>
				<controls>
					<AFCS>
						<engage type="bool">false</engage>
						<vec-acl type="int">0</vec-acl><!-- 1=VEC/PCD, 0=OFF, -1=ACL -->
						<altitude type="bool">false</altitude>
						<heading-gt type="int">0</heading-gt><!-- 1=HDG, 0=OFF, -1=GT -->
						<altitude-enable type="bool">0</altitude-enable>
					</AFCS>
					<armament>
						<emerg-jettison-switch type="bool">0</emerg-jettison-switch>
						<tanks-ground-sound type="bool">0</tanks-ground-sound>
					</armament>
					<fuel>
						<bingo type="int">11500</bingo>
					</fuel>
					<gear>
						<ld-gear-handle-anim type="double">0</ld-gear-handle-anim>
					</gear>
					<hud>
						<intens type="double">1</intens>
					</hud>
					<lighting>
						<index-norm type="double">1</index-norm>
						<hook-bypass type="bool">false</hook-bypass><!-- false = carrier -->
					</lighting>
					<HSD>
						<brightness type="double">1</brightness>
						<on-off type="bool">0</on-off>
					</HSD>
					<pilots-displays>
						<mode>
							<to-bt type="bool">false</to-bt>
							<cruise-bt type="bool">true</cruise-bt>
							<aa-bt type="bool">false</aa-bt>
							<ag-bt type="bool">false</ag-bt>
							<ldg-bt type="bool">false</ldg-bt>
						</mode>
						<steer>
							<man-bt type="bool">false</man-bt>
							<tacan-bt type="bool">true</tacan-bt>
							<awl-bt type="bool">false</awl-bt>
							<dest-bt type="bool">false</dest-bt>
							<vec-bt type="bool">false</vec-bt>
						</steer>
						<hsd-mode-nav type="int">1</hsd-mode-nav><!-- 1=NAV, 0=TID, -1=ECM -->
					</pilots-displays>
					<SAS>
						<pitch type="bool">true</pitch>
						<roll type="bool">true</roll>
						<yaw type="bool">true</yaw>
					</SAS>
					<tacan>
						<xy-switch type="bool">0</xy-switch>
					</tacan>
					<VDI>
						<brightness type="double">1</brightness>
						<on-off type="bool">0</on-off>
					</VDI>
				</controls>
				<instrumentation>
					<airspeed-indicator>
						<safe-speed-limit-bug type="double">830</safe-speed-limit-bug>
					</airspeed-indicator>
					<aoa-indexer>
						<!-- target = 11.3 deg AoA -->
						<too-slow-deg>13.7</too-slow-deg>	<!-- target +2.4 deg -->
						<slow-deg>12.1</slow-deg>			<!-- target +0.8 deg -->
						<fast-deg>10.5</fast-deg>			<!-- target -0.8 deg -->
						<too-fast-deg>8.9</too-fast-deg>	<!-- target -2.4 deg -->
					</aoa-indexer>
					<acls>
						<engaged type="bool">false</engaged>
					</acls>
					<g-meter>
						<g-max archive="y" type="double">1</g-max>
						<g-min archive="y" type="double">1</g-min>
					</g-meter>
					<radar-altimeter>
						<limit-bug type="double">250</limit-bug>
					</radar-altimeter>
					<tacan>
						<nogo-lamp type="bool">false</nogo-lamp>
						<go-lamp type="bool">false</go-lamp>
						<mode type="int">0</mode>
					</tacan>
					<warnings>
						<master-caution type="bool">0</master-caution>
					</warnings>
				</instrumentation>
				<modeling>
					<show-canopy type="bool">false</show-canopy>
				</modeling>
				<systems>
					<afcs>
						<engaged type="bool">false</engaged>
						<target-roll-deg type="double">0</target-roll-deg>
					</afcs>
					<apc>
						<engaged type="bool">false</engaged>
						<self-disengaged-light type="bool">0</self-disengaged-light>
					</apc>
					<gun>
						<rounds type="int">200</rounds>
					</gun>
					<wing-sweep>
						<mode>
							<off type="bool">false</off>
							<auto type="bool">true</auto>
							<man type="bool">false</man>
							<emer type="bool">false</emer>
							<over type="bool">false</over>
						</mode>
					</wing-sweep>
				</systems>
			</f-14b>
			<livery>
				<path type="string">RedRippers1</path>
			</livery>
		</model>

		<multiplay>
			<generic>
				<float n="0">0</float><!-- wing-sweep -->
				<float n="1">0</float><!-- main flaps -->
				<float n="2">0</float><!-- aux flaps  -->
				<float n="3">0</float><!-- slats      -->
				<float n="4">0</float><!-- left elevator  -->
				<float n="5">0</float><!-- right elevator -->
				<float n="6">0</float><!-- refuel probe -->
			</generic>
		</multiplay>

		<panel>
			<path>Aircraft/f-14b/Panels/2D.xml</path>
			<visibility archive="y">false</visibility>
		</panel>

